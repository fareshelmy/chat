<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	prefHeight="600.0" prefWidth="400.0"
	style="-fx-background-color: #18a4d8;"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<Rectangle fx:id="rectangle" arcHeight="5.0" arcWidth="5.0"
			fill="DODGERBLUE" height="40.0" stroke="#18a4d8" strokeType="INSIDE"
			style="-fx-fill: #18a4d8;" width="400.0"
			BorderPane.alignment="CENTER" />
	</top>
	<center>
		<StackPane fx:id="stackPane" prefHeight="150.0"
			prefWidth="200.0" BorderPane.alignment="CENTER">
			<children>
				<Rectangle arcHeight="5.0" arcWidth="5.0"
					fill="DODGERBLUE" height="560.0" stroke="#18a4d8"
					strokeType="INSIDE"
					style="-fx-fill: linear-gradient(#3ec4ff, #207199);" width="400.0" />
				<FlowPane fx:id="flowPane" maxHeight="250.0"
					maxWidth="300.0" minHeight="200.0" minWidth="200.0"
					prefHeight="200.0" prefWidth="200.0"
					style="-fx-background-color: #fff;">
					<children>
						<Label prefHeight="28.0" prefWidth="250.0"
							text="Add details">
							<FlowPane.margin>
								<Insets left="30.0" top="40.0" />
							</FlowPane.margin>
							<font>
								<Font name="System Bold" size="19.0" />
							</font>
						</Label>
						<Label layoutX="41.0" layoutY="78.0" prefHeight="31.0"
							prefWidth="293.0"
							text="We need a little more info before you can use this app."
							wrapText="true">
							<font>
								<Font size="13.0" />
							</font>
							<FlowPane.margin>
								<Insets />
							</FlowPane.margin>
							<padding>
								<Insets left="30.0" />
							</padding>
						</Label>
						<Label layoutX="10.0" layoutY="78.0" prefHeight="31.0"
							prefWidth="293.0" text="Country/region" wrapText="true">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<padding>
								<Insets left="30.0" />
							</padding>
						</Label>
						<ComboBox fx:id="countryCBX" opacity="0.59"
							prefHeight="25.0" prefWidth="244.0" promptText="Egypt"
							style="-fx-background-radius: 0; -fx-background-color: #D3D3D3;">
							<FlowPane.margin>
								<Insets left="30.0" />
							</FlowPane.margin>
						</ComboBox>
						<Label prefHeight="31.0" prefWidth="293.0" text="Birthdate"
							wrapText="true">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<padding>
								<Insets left="30.0" />
							</padding>
						</Label>
						<DatePicker fx:id="birthdatePocker">
							<FlowPane.margin>
								<Insets left="30.0" />
							</FlowPane.margin>
						</DatePicker>
						<ButtonBar maxHeight="20.0" prefHeight="40.0"
							prefWidth="270.0">
							<buttons>
								<Button fx:id="backBTN" graphicTextGap="0.0"
									mnemonicParsing="false"
									style="-fx-background-color: #D3D3D3; -fx-background-radius: 0;"
									text="Back" />
								<Button fx:id="nextBTN" mnemonicParsing="false"
									style="-fx-background-color: #18a4d8; -fx-background-radius: 0;"
									text="Next" textFill="WHITE" />
							</buttons>
							<FlowPane.margin>
								<Insets top="10.0" />
							</FlowPane.margin>
						</ButtonBar>
					</children>
				</FlowPane>
			</children>
		</StackPane>
	</center>
</BorderPane>
